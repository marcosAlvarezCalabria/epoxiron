{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "express",
            "pg",
            "cors",
            "jsonwebtoken",
            "bcryptjs"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/**",
        "**/*.test.ts"
    ]
}